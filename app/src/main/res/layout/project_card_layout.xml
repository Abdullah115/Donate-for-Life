<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/project_card_view"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:padding="16dp" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/project__image"
            android:background="@drawable/card_rect"
            app:srcCompat="@drawable/logo"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/project_title"
            android:textColor="@color/white"
            android:hint="He for She"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:layout_toRightOf="@+id/project__image"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/project_desc1"
            android:textColor="@color/white"
            android:maxLines="4"
            android:hint="Purpose of this projects to urge people for giving equal rights to women of our society."
            android:textColorHint="@color/white"
            android:layout_toRightOf="@+id/project__image"
            android:layout_below="@+id/project_title"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>