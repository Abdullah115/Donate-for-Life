<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ngo_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ciit.com.abdullah.donateforlife2.NGOs.NgoDashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="270dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:padding="16dp"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/logo"
                android:tint="@color/colorPrimaryDark"
                android:id="@+id/logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="34dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Shoukat Khanum"
                android:textColorHint="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:id="@+id/ngoname"
                android:layout_weight="0.57"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="50dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Description"
                android:background="@drawable/button_b"
                android:textColor="@color/white"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:id="@+id/ngodashboard_description"
                android:shadowRadius="4"
                android:clickable="true"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Projects"
                android:background="@drawable/button_b"
                android:textColor="@color/white"
                android:layout_marginLeft="45dp"
                android:clickable="true"
                android:layout_marginRight="45dp"
                android:shadowRadius="4"
                android:layout_marginBottom="10dp"
                android:id="@+id/ngo_dashboard_projects"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Donate Now"
                android:background="@drawable/button_b"
                android:textColor="@color/white"
                android:layout_marginLeft="45dp"
                android:clickable="true"
                android:layout_marginRight="45dp"
                android:shadowRadius="4"
                android:layout_marginBottom="40dp"
                android:id="@+id/donate1"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
