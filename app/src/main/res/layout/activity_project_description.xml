<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ciit.com.abdullah.donateforlife2.pkgNgoProjects.project_description">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="340px"
                android:src="@drawable/login"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:id="@+id/project_image"
                android:paddingBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/project_name"
                android:textSize="34dp"
                android:textColor="@color/black"
                android:padding="20dp"
                android:text="Project Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="16dp"
                android:id="@+id/prj_description"
                android:text="@string/shaukatkhanum_desc"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Donate Now"
                android:background="@drawable/button_b"
                android:textColor="@color/white"
                android:layout_marginLeft="45dp"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="45dp"
                android:shadowRadius="4"
                android:id="@+id/projectdesc_donate"
                android:layout_marginBottom="40dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
