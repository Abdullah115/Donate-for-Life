<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ciit.com.abdullah.donateforlife2.Registration.signup">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_user"
                    android:layout_gravity="center"
                    android:padding="13dp"
                    android:layout_marginStart="120dp"
                    android:tint="@color/black"
                    android:background="@drawable/white"
                    android:id="@+id/pimage"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/imgView_userIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/img_user"
                        android:tint="@color/white" />

                    <EditText
                        android:id="@+id/signup_fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_userIcon"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imgView_userIcon"
                        android:background="@color/white"
                        android:backgroundTint="@color/editTextBG"
                        android:fontFamily="sans-serif"
                        android:hint="First Name"
                        android:paddingEnd="0dp"
                        android:paddingStart="20dp"
                        android:textSize="15sp" />
                </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/imgView_userIcon2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/img_user"
                        android:tint="@color/white" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_userIcon2"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imgView_userIcon2"
                        android:background="@color/white"
                        android:hint="Last Name"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp"
                        android:backgroundTint="@color/editTextBG"
                        android:id="@+id/signup_lname"/>
                </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/imgView_userIcon3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/img_email"
                        android:tint="@color/white" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:layout_alignBottom="@+id/imgView_userIcon3"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imgView_userIcon3"
                        android:background="@color/white"
                        android:backgroundTint="@color/editTextBG"
                        android:hint="Email"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp"
                        android:id="@+id/signup_email"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/imgView_userIcon4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/phone1"
                        android:tint="@color/white" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:layout_alignBottom="@+id/imgView_userIcon4"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imgView_userIcon4"
                        android:background="@color/white"
                        android:backgroundTint="@color/editTextBG"
                        android:hint="Mobile Number"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp"
                        android:id="@+id/signup_phone"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/imgView_userIcon5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/placeholder"
                        android:tint="@color/white" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_userIcon5"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imgView_userIcon5"
                        android:background="@color/white"
                        android:backgroundTint="@color/editTextBG"
                        android:hint="Address"
                        android:maxLines="4"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp"
                        android:id="@+id/signup_address"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/imgView_userIcon6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/img_authentication"
                        android:tint="@color/white" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:layout_alignBottom="@+id/imgView_userIcon6"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imgView_userIcon6"
                        android:background="@color/white"
                        android:backgroundTint="@color/editTextBG"
                        android:hint="Password"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp"
                        android:id="@+id/signup_password"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/imgView_userIcon7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/img_authentication"
                        android:tint="@color/white" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:layout_alignBottom="@+id/imgView_userIcon7"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imgView_userIcon7"
                        android:background="@color/white"
                        android:backgroundTint="@color/editTextBG"
                        android:hint="Re-enter Password"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp"
                        android:id="@+id/signup_password2"/>
                </RelativeLayout>
            <Button
                android:id="@+id/signup_createaccount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_bg"
                android:fontFamily="sans-serif-medium"
                android:text="SIGN UP"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/signup_member"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/signup_createaccount"
                android:background="@drawable/button_bg2"
                android:fontFamily="sans-serif-medium"
                android:text="Already a member? SIGN IN"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
